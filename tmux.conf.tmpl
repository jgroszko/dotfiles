# Switch windows with Alt-Direction
bind -n M-Left previous-window
bind -n M-Right next-window

# Switch window order
bind -r S-Left swap-window -t -1
bind -r S-Right swap-window -t +1

# Switch panes with Alt-Shift-Direction
bind -n C-S-Left select-pane -L
bind -n C-S-Right select-pane -R
bind -n C-S-Up select-pane -U
bind -n C-S-Down select-pane -D

# Synchronize panes
bind b setw synchronize-panes

# Enable mouse control (clickable windows, panes, resizable panes)
set -g mouse on

# Terminal colors
set -g default-terminal "screen-256color"

######################
### DESIGN CHANGES ###
######################

# loud or quiet?
# set-option -g visual-activity off
# set-option -g visual-bell off
# set-option -g visual-silence off
# set-window-option -g monitor-activity off
# set-option -g bell-action none

#  modes
setw -g clock-mode-colour colour5
setw -g mode-attr bold
setw -g mode-fg {{HIGHLIGHT}}
setw -g mode-bg {{GREY_2}}

# panes
set -g pane-border-bg {{BLACK}}
set -g pane-border-fg {{GREY_3}}
set -g pane-active-border-bg {{BLACK}}
set -g pane-active-border-fg {{HIGHLIGHT}}

# status bar
set -g status-position bottom
set -g status-justify left
set -g status-bg {{GREY_0}}
set -g status-fg {{GREY_5}}
set -g status-attr dim
set -g status-left ''
{% if REMOTE %}
set -g status-right '#[fg={{GREY_2}}]î‚²#[bg={{GREY_2}}]#[fg={{HIGHLIGHT}}] #h '
{% else %}
set -g status-right '#(cd #{pane_current_path}; ~/bin/git-status.sh)'
{% endif %}
set -g status-right-length 50
set -g status-left-length 20
set -g status-interval 1

setw -g window-status-current-fg {{GREY_6}}
setw -g window-status-current-bg {{GREY_2}}
setw -g window-status-current-attr bold
setw -g window-status-current-format ' #I#[fg={{HIGHLIGHT}}]:#[fg={{GREY_6}}]#W#[fg={{HIGHLIGHT}}]#F '

setw -g window-status-fg {{GREY_4}}
setw -g window-status-bg {{GREY_1}}
setw -g window-status-attr none
setw -g window-status-format ' #I#[fg=colour237]:#[fg=colour250]#W#[fg=colour244]#F '

setw -g window-status-bell-attr bold
setw -g window-status-bell-fg {{GREY_6}}
setw -g window-status-bell-bg {{RED}}

# messages
set -g message-attr bold
set -g message-fg {{GREY_6}}
set -g message-bg {{GREY_2}}
